@page "/movie/edit/{MovieId:int}"
@page "/movie/edit/{MovieId:int}/{MovieTitle}"
@using BlazorPracticeServer.Components.MovieComp 
@using BlazorPracticeServer.Services


<h3>EditMoviePage</h3>

<MovieForm Movie="_movie" OnValidSubmit="EditMovie">
</MovieForm>



@code {

    [Inject]
    public IMovieService MovieService { get; set; }
    [Parameter]
    public int MovieId { get; set; }
    [Parameter]
    public string MovieTitle { get; set; }
    

    private Movie _movie { get; set; } = new Movie();

    protected override async Task OnInitializedAsync() =>
        _movie = await MovieService.RetrieveMovieByIdAsync(MovieId);


    private async Task EditMovie()
    {
        await MovieService.UpdateMovieAsync(_movie, _movie.Id);
    }
}
